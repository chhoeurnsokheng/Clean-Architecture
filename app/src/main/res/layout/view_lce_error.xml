<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icekh.ugamer.shared.lce.view.impl.error.SimpleLceErrorView"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/normal_space">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/errorImageView"
            android:layout_width="@dimen/lce_image_size"
            android:layout_height="@dimen/lce_image_size"
            app:tint="#A2A2A2"
            tools:src="@drawable/ic_ugamer_vertical_gray" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lce_image_vertical_space" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/errorTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lce_title_text_size"
            android:textStyle="bold"
            tools:text="@string/something_went_wrong" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/errorDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_space"
            android:textSize="@dimen/lce_description_text_size"
            tools:text="@string/something_went_wrong" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lce_button_vertical_space" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/retryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lce_button_horizontal_space"
            android:layout_marginEnd="@dimen/lce_button_horizontal_space"
            android:insetTop="@dimen/zero_dp"
            android:insetBottom="@dimen/zero_dp"
            android:text="@string/try_again"
            android:textAllCaps="false"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</merge>
